  <div style="vertical-align: top; display: inline-block; width: 48%;">

    <h1 style="color: #3333CC;">Latest Posts</h1>
    <table>
      <% @posts.each do |post| %>

        <tr><td class="post-index-textbox">
          <figure class="tint" onclick="location.href =" + "#{post_path()}" ><%= link_to (image_tag("#{post.image}", width: "100%")), post %></figure></td>
        </tr>

        <tr><td class="post-index-textbox" style="background-color: GhostWhite;">
          <strong style="font-size: 2em;"><%= link_to post.title, post %></strong> <span style="font-size: 1em; font-style: italic; font-weight: bold;"><%= post.created_at.to_date.strftime("%B %d, %Y") %></span>
          <div style="font-size: 1.25em;"><%= post.dek %></div></td>
        </tr>

      <% end %>
    </table>
    <table><tr>
      <td><i class="arrow circle right icon" style="font-size: 32px; color: #3333CC; opacity: 1;vertical-align: middle;"></i></td>
      <td><h3>For more posts, please visit <%= link_to "the blog.", '/posts' %></h3></td>
    </tr></table>
  </div>

