 <!-- Header (Computer and Tablet) -->
<div class="computer tablet only row" style="margin-top:0px; top: 0px;">
  <div class="ui purple fixed menu navbar page grid">

    <!-- DJ DeWitt Icon -->
    <a href class="item" style="margin: 0px; padding: 0px;"><div class="dj-home-class" onclick="djHomeClass()" style="width:32px; height:32px; padding: 0px;"></div></a>

    <!-- Left Nav (Home, Blog, Projects, Contact) -->
    <a href="/" class="brand item"><span style="color:white;">DJ DeWitt</span></a>
    <a href="/posts" class="item"><span style="color:white;">Blog</span></a>
    <a href="/projects" class="item"><span style="color:white;">Projects</span></a>
    <a href="/contact" class="item"><span style="color:white;">Contact</span></a>
    <!-- Right Menu (Search, Social Icons) -->
    <div class="right menu">
      <div class="item">
        <!-- <div class="ui icon input"> -->
          <%= form_tag("/search", method: "get", id: "search_form") do %>
            <%= text_field_tag(:q, nil, placeholder: 'search site', class: 'search-field') %>
            <button type="submit" form="search_form" class='search-field-button'><i class="search icon" style="font-size: 2em; opacity: 1;"></i></button>
          <% end %>
        <!-- </div> -->
      </div>

      <% form_tag projects_path, :method => 'get' do %>
        <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
        </p>
      <% end %>
      <!-- Social Icons -->
      <a href class="item" style="margin: 0px; padding: 0px;"><div class="twitter-class" onclick="socialTwitter()" style="width:32px; height:32px; padding:0px;"></div></a>
      <a href class="item" style="margin: 0px; padding: 0px;"><div class="linkedin-class" onclick="socialLinkedIn()" style="width:32px; height:32px; padding:0px;"></div></a>
      <a href class="item" style="margin: 0px; padding: 0px;"><div class="github-class" onclick="socialGitHub()" style="width:32px; height:32px; padding:0px;"></div></a>
      <a href class="item" style="margin: 0px; padding: 0px;"><div class="mail-class" onclick="socialMail()" style="width:32px; height:32px; margin: 0px; padding:0px;"></div></a>
    </div>
  </div>
</div>
